@using EntityLayer.Concrete
@model List<Menu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<center><h2> Menu Listesi</h2></center>
<div>
    <form method="post" action="/Menu/index">
        <table class="table table-hover">
            <tr>

                <th>MenuID</th>
                <th>Menu Adı</th>
                <th>Fiyat</th>

                <th></th>
            </tr>
        
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.MenuID</td>
                    <td>@item.MenuName</td>
                    <td>@item.Fiyat</td>

                    <td><a href="/Menu/DeleteMenu/@item.MenuID" class="btn btn-danger"> sil</a></td>
                    <td><a href="/Menu/EditMenu/@item.MenuID" class="btn btn-success"> güncelle</a></td>

                </tr>
            }
        </table>

    </form>
</div>
<a href="/Menu/AddMenu" class="btn btn-info">Ekle</a>

